<h1 class="margin">Edit your Post</h1>
<%= form_with(model: [@user, @post], url: user_post_path) do |f| %>
    <% if @post.errors.any? %>
        <div id="error">
            <h2>
                <%= pluralize(@post.errors.count, "error") %>
                 stopped this post from being saved:
            </h2>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= f.text_area :body, cols: 40, rows: 5  %>
    </p>
    <p>
        <%= f.file_field :photo %>
    </p>
      <%= f.submit%>
<% end %>
<%= link_to 'Back', users_path(current_user) %>